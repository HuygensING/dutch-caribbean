				border-bottom 1px solid #e0e0e0
				font-size 12px
				margin-top 0
				padding 10px 20px 20px

		.solr-search-results
			> *
				padding-left 40px
				padding-right 15px
			li
				list-style-type none
			.current-query
				display: none
			.panel-heading
				background-color #fff
				padding 0 0 15px 0
				margin-bottom 20px
				.dropdown
					cursor pointer
					li
						padding 0
			ul
				> li
					border-bottom: 1px solid #f6f6f6;
					padding-top: 18px;
					padding-bottom: 8px;
					margin: 0;
				.title
					font-weight: 700;
					font-size: 11pt;
					display: inline-block;
					max-width: 85%;
					color black
				.right
					display inline-block
					float right
				.ref
					display block
					color gray
					font-size 80%
.tabs
	tabsWidth = 295px
	oneTabWidth = tabsWidth / 3


	a
		color #000
	position relative
	width tabsWidth
	ul
		height 54px
		li
			display block
			position absolute
			bottom 0
			width oneTabWidth

			background-color tabsBackgroundColor
			hoverColor = lighten(activeTabColor, 30%)

			list-style none
			line-height 38px
			text-align center

			&:before
				display block
				content " "
				width 0
				height 0
				border-style solid
				border-width 0 0 8px oneTabWidth
				border-color transparent transparent tabsBackgroundColor transparent
				line-height 0px
				position absolute

			&.archives
				left 0
				padding-top 0
				&:before
					margin-top -8px
			&.creators
				left 1 * oneTabWidth
				padding-top 8px
				&:before
					margin-top -16px
			&.legislations
				legTabWidth = tabsWidth - 2*oneTabWidth
				left 2 * oneTabWidth
				width legTabWidth
				padding-top 16px
				&:before
					border-width 0 0 8px legTabWidth
					margin-top -24px

			&:hover
				background-color hoverColor
				&:before
					border-color transparent transparent hoverColor transparent
			&.active
				font-weight bold
				background-color activeTabColor
				&:before
					border-color transparent transparent activeTabColor transparent

.clearSearch
	border: none;
	outline: none;
	display: inline-block;
	cursor: pointer;
	font-size: 12px;
	background: 0;
	background-color: #00c4c2;
	color: #fff;
	box-shadow: none;
	border-radius: 3px;
	width: auto;
	padding: 8px 10px;
	height: initial;
	margin: 10px 10px 0px;



