#app
	.solr-faceted-search
		.glyphicon
			display none
		.panel.panel-default
			border none
		.col-md-3 .panel-heading
			display none
		&.col-md-12, .col-md-3, .col-md-9
			padding 0
		h5
			font-family: "Raleway",sans-serif
			font-size 12px
			font-weight bold
		.solr-search-fields
			& > .list-group-item
