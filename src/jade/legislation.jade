.breadcrumbs
	.line
	ul
		li: a(href="/legislation/results") Search results
		| <% if (data.titleEng) { %>
		li.active
			| <a href="/legislation/"><%= data.titleEng.length > 70 ? data.titleEng.substr(0,70) + '...' : data.titleEng %></a>
		| <% } %>

.content
	.panel-left
		h3.type Legislation
		h2.title
			| <%- data.titleEng %>
			i.reference <%= data.reference %> <%= data.pages %>

		| <% if (String().toLowerCase(data.titleEng) !== String(data.titleNld).toLowerCase()) { %>
		.section.dutch-title
			h4 Dutch title
			p <%= data.titleNld %>
		| <% } %>

		.section.contents
			p <%= String(data.contents).replace(/\n/g, '<br>') %>

		.section.archival-source
			h4 Original archival source
			p <%= data.originalArchivalSource || '-' %>
		.section.earlier-later-publications
			h4 Earlier and later publications
			| <% if (_.has(data, 'otherPublications') && data.otherPublications.length) { %>
			p <%= data.otherPublications.join(', ') %>
			| <% } else { %>
			p -
			| <% } %>

	.panel-right
		.section.abbreviations
			| <a href="<%= config.abbreviationsURL %>" target="_new">Explain abbreviations</a>
		.section.relevant-dates
			h4 Relevant dates
			p <%= data.date1 %>


		.section.geography
			h4 Geography
			| <% if (data['@relations'] && _.has(data['@relations'], 'has_place') && data['@relations']['has_place'].length) { %>
			| <% _.each(data['@relations']['has_place'], function (place) { %>
			p <%= place.displayName %>
			| <% }) %>
			| <% } else { %>
			p -
			| <% } %>

		.section.subject
			h4 Subject
			| <% if (data['@relations'] && _.has(data['@relations'], 'has_keyword') && data['@relations']['has_keyword'].length) { %>
			| <% _.each(data['@relations']['has_keyword'], function (kw) { %>
			p <%= kw.displayName %>
			| <% }) %>
			| <% } else { %>
			p -
			| <% } %>

		.section.person
			h4 Person
			| <% if (data['@relations'] && _.has(data['@relations'], 'has_person') && data['@relations']['has_person'].length) { %>
			| 	<% _.each(data['@relations']['has_person'], function (person) { %>
			p 		<%= person.displayName %>
			| 	<% }) %>
			| <% } else { %>
			p -
			| <% } %>