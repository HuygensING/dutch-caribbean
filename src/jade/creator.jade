.breadcrumbs
	.line
	ul
		li: a(href="/creator/results") Search results
		| <% if (data.nameEng) { %>
		li.active
			| <a href="/creator/<%= data._id %>"><%= data.nameEng.length > 70 ? data.nameEng.substr(0,70) + '...' : data.nameEng %></a>
		| <% } %>


.content
	.panel-left
		h3.type Creator
		h2.title
			<%- data.nameEng %>

		<% if (String(data.nameEng).toLowerCase() !== String(data.nameNld).toLowerCase()) { %>
		.section.dutch-name
			h4 Dutch name
			p <%= data.nameNld %>
		<% } %>

		.section.history
			<%= String(data.history).replace(/\n/g, '<br>') %>

		.section.remarks
			h4 Remarks
			| <% if (data.notes) { %>
			p	<%= data.notes %>
			| <% } else { %>
			p -
			| <% } %>

		.section.related-archives
			h4 Related archives
			| <% if (_.has(data, 'relatedArchives') && data.relatedArchives.length) { %>
			ul
				| <% _.each(data.relatedArchives, function (archive) { %>
				li <a href="<%= config.archiveURL(archive.id) %>"><%- archive.displayName %></a>
				| <% }) %>
			| <% } else { %>
			p -
			| <% } %>

		.section.related-creators
			h4 Related creators
			| <% if (_.has(data, 'relatedArchivers') && data.relatedArchivers.length) { %>
			ul
				| <% _.each(data.relatedArchivers, function (archiver) { %>
				li <a href="<%= config.archiverURL(archiver.id) %>"><%- archiver.displayName %></a>
				| <% }) %>
			| <% } else { %>
			p -
			| <% } %>

	.panel-right
		.section.date
			h4 Date
			p
				span.lbl Begin date
				span <%= data.beginDate %>
			p
				span.lbl End date
				span <%= data.endDate %>

		.section.geography
			h4 Geography
			| <% if (_.has(data, 'placeKeywords') && data.placeKeywords.length) { %>
			| 	<% _.each(data.placeKeywords, function (place) { %>
			p 		<%= place.displayName %>
			| 	<% }) %>
			| <% } else { %>
			p -
			| <% } %>

		.section.subject
			h4 Subject
			| <% if (_.has(data, 'subjectKeywords') && data.subjectKeywords.length) { %>
			| 	<% _.each(data.subjectKeywords, function (kw) { %>
			p 		<%= kw.displayName %>
			| 	<% }) %>
			| <% } else { %>
			p -
			| <% } %>

		.section.person
			h4 Person
			| <% if (_.has(data, 'persons') && data.persons.length) { %>
			| 	<% _.each(data.persons, function (person) { %>
			p 		<%= person.displayName %>
			| 	<% }) %>
			| <% } else { %>
			p -
			| <% } %>

		.section.type
			h4 Type
			| <%= (data.types || []).join(', ') %>